{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "lib": [
      "es2015",
      "es2017",
      "es2019",
      "es2020",
      "dom"
    ],
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "chrome"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
      "./node_modules"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
