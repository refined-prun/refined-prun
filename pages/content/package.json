{
  "name": "@refined-prun/content-script",
  "description": "chrome extension content script",
  "private": true,
  "sideEffects": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "dev": "pnpm build:watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write --ignore-path ../../.prettierignore",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@refined-prun/storage": "workspace:*"
  },
  "devDependencies": {
    "@refined-prun/tsconfig": "workspace:*",
    "@refined-prun/hmr": "workspace:*"
  }
}
